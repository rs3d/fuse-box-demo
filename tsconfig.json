{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "traceResolution": false,
    "diagnostics": true,
    "listFiles": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "module": "system",
    "moduleResolution": "node",
    "target": "es5",
    "types": [],
    "lib": ["es2015", "dom"],
    "paths": {
      "@node/*": [
        "node_modules/*"
      ],
      "*": [
        "*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "bower_components",
    "node_modules",
    "build",
    "**/*.spec.ts"
  ]
}
